<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:app="http://schemas.huawei.com/hap/res-auto"
    ohos:height="match_parent"
    ohos:width="match_parent">


    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="Custom by selector"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="1. tick_marks_color=@color/selector_tick_marks_color"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_progress="62"
            app:tsb_show_tick_marks_type="oval"
            app:tsb_tick_marks_color_selector="$graphic:selector_tick_marks_color"
            app:tsb_ticks_count="6" />


        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="2. tick_marks_drawable=@drawable/selector_tick_marks_drawable"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_tick_marks_drawable_selector="selector_tick_marks_drawable"
            app:tsb_progress="45"
            app:tsb_tick_marks_size="18vp"
            app:tsb_ticks_count="6" />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="3. tick_texts_color=@color/selector_tick_texts_2_color"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_progress="45"
            app:tsb_show_tick_marks_type="divider"
            app:tsb_show_tick_texts="above"
            app:tsb_tick_texts_color_selector="$graphic:selector_tick_texts_2_color"
            app:tsb_ticks_count="6" />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:multiple_lines="true"
            ohos:text="4. tick_texts_color=@color/selector_tick_texts_3_color,\n r2l=true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_max="-10"
            app:tsb_min="-20"
            app:tsb_progress="-17"
            app:tsb_progress_value_float="true"
            app:tsb_r2l="true"
            app:tsb_show_tick_marks_type="divider"
            app:tsb_show_tick_texts="above"
            app:tsb_tick_texts_color_selector="$graphic:selector_tick_texts_3_color"
            app:tsb_ticks_count="6" />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="5. thumb_color=@color/selector_thumb_color"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp"
            />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_progress="20"
            app:tsb_show_tick_marks_type="divider"
            app:tsb_thumb_color_selector="$graphic:selector_thumb_color"
            app:tsb_ticks_count="6" />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_margin="10fp"
            ohos:left_margin="16fp"
            ohos:text="6. thumb_drawable=@drawable/selector_thumb_drawable"
            ohos:multiple_lines="true"
            ohos:text_color="#555555"
            ohos:text_size="13vp"
            ohos:top_margin="16fp" />

        <com.warkiz.tickseekbar.TickSeekBar
            ohos:width="match_parent"
            ohos:height="match_content"
            app:tsb_progress="20"
            app:tsb_show_tick_marks_type="divider"
            app:tsb_thumb_drawable_selector="selector_thumb_drawable"
            app:tsb_thumb_size="18vp"
            app:tsb_ticks_count="6" />

    </DirectionalLayout>

</ScrollView>
